{
  "name": "@pandazy/mole-config",
  "version": "0.5.4",
  "description": "Configuration files for TypeScript projects",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pandazy/mole-config.git"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  },
  "keywords": [
    "TypeScript",
    "eslint",
    "tsconfig",
    "jest config"
  ],
  "author": "Martin Zheng",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/pandazy/mole-config/issues"
  },
  "homepage": "https://github.com/pandazy/mole-config#readme",
  "devDependencies": {
    "@babel/cli": "^7.21.0",
    "@babel/core": "^7.21.3",
    "@babel/preset-env": "^7.20.2",
    "@babel/preset-typescript": "^7.21.0",
    "@types/jest": "^29.4.4",
    "babel-plugin-module-resolver": "^5.0.0",
    "jest": "^29.5.0",
    "typescript": "^4.9.5"
  },
  "dependencies": {
    "ts-jest": "^29.0.5",
    "tslib": "^2.5.0",
    "yargs": "^17.7.1"
  },
  "files": [
    "dist",
    "bin",
    "reserved"
  ],
  "bin": {
    "cfguntar": "./bin/untar.js",
    "cfgpaths": "./bin/map-paths.js"
  },
  "scripts": {
    "cfgtar": "node ./bin/tar.js",
    "cfg:clean": "rm -rf dist",
    "cfg:build": "yarn cfg:clean && yarn tsc && npx babel src --out-dir dist --extensions '.ts,.tsx' && yarn cfgtar",
    "cfg:release": "yarn cfg:build && yarn publish && git clean -fd"
  }
}
